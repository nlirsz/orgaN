{
  "version": 2,
  "builds": [
    {
      "src": "api/server.js", 
      "use": "@vercel/node"
    },
    {
      "src": "src/index.html", 
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)", 
      "dest": "api/server.js" 
    },
    {
      "src": "/(.*\\.(css|js|png|jpg|jpeg|gif|svg|ico|woff|woff2|ttf|eot))", 
      "dest": "src/$1", 
      "headers": {
        "cache-control": "s-maxage=31536000, immutable"
      }
    },
    {
      "src": "/(.*)", 
      "dest": "src/index.html" 
    }
  ]
}